<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin" >

    <Button
        android:text="record user details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button29"
        android:onClick="onClickRecordUserData"/>

    <Button
        android:text="custom modifiers 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button30"
        android:onClick="onClickSetCustom1"/>

    <Button
        android:text="custom modifiers 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button31"
        android:onClick="onClickSetCustom2"/>

    <Button
        android:text="user log in with id 'XXX'"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button32"
        android:onClick="onClickLogin"/>

    <Button
        android:text="user log out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button33"
        android:onClick="onClickLogout"/>
</LinearLayout>